@model  IEnumerable<CrudMVC.Models.Employee>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2></h2>
    <div class="d-flex p-2 h2 text-center">Employees Record</div>
    <div class="mx-5">
        <a href="@Url.Action("Create")" class="btn btn-primary"> Add New Employee</a>
    </div>

    <table class="table table-bordered table-hover my-3">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Age
                </th>
                <th>
                    State
                </th>
                <th>
                    Country
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EmployeeID</td>
                    <td>@item.Name</td>
                    <td>@item.Age </td>
                    <td>@item.State </td>
                    <td>@item.Country</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
